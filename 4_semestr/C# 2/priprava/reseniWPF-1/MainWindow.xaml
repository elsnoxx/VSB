<Window x:Class="reseniWPF_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulář" Height="200" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Zadejte hodnotu:" FontSize="16" Margin="0,0,0,5"/>
        <TextBox Name="InputBox" FontSize="14" Width="200" Margin="0,0,0,10"/>
        <TextBlock Name="ErrorText" Foreground="Red" FontSize="12" Visibility="Collapsed" Margin="0,0,0,10"/>
        <Button Content="Odeslat" Width="100" Click="SubmitButton_Click"/>
    </StackPanel>
</Window>