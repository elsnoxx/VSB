<Window x:Class="testDesktopApp.editWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testDesktopApp"
        mc:Ignorable="d"
        Title="editWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Name="IcoLabel" Content="IČO" Width="100" Height="30" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="1" Name="DicLabel" Content="DIČ" Width="100" Height="30" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="2" Name="NameLabel" Content="Obchodní jméno" Width="100" Height="30" Margin="10"></Label>
        <Label Grid.Column="0" Grid.Row="3" Name="SidloLabel" Content="Sidlo" Width="100" Height="30" Margin="10"></Label>
        <TextBox Grid.Column="1" Grid.Row="0" Name="IcoTextBox" Width="200" Height="30" Margin="10" Text="{Binding ico}" IsEnabled="False"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="1" Name="DicTextBox" Width="200" Height="30" Margin="10" Text="{Binding dic}"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="2" Name="ObchodniJmenoTextBox" Width="200" Height="30" Margin="10" TextChanged="textChangeObec" Text="{Binding sidlo.nazevObce}"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="3" Name="SidloTextBox" Width="200" Height="30" Margin="10" TextChanged="textChangeObchodniJmeno" Text="{Binding obchodniJmeno}"></TextBox>

        <Label Grid.Row="4" Grid.Column="0" Content="Poznámka:" Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="PoznamkaTextBox" Margin="5"/>

        <Button Grid.Row="5" Grid.Column="2" Content="Uložit" Name="SaveButton" HorizontalAlignment="Left" Margin="10,5,0,5" Click="SaveButton_Click" Width="185"/>
        <Button Grid.Row="5" Grid.Column="1" Name="back" Content="Zpět" HorizontalAlignment="Left" Margin="33,5,0,5" Click="back_Click" Width="185"/>
    </Grid>
</Window>
