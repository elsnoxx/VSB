@model ParkingLotWEB.Models.ViewModels.ParkingLotViewModel

@{
    ViewData["Title"] = "Admin Dashboard - " + Model.Name;
}

<h1>@Model.Name</h1>
<p>Celková kapacita: @Model.Capacity</p>
<p>Volných míst: @Model.FreeSpaces</p>
<p>Obsazených míst: @Model.ParkingSpaces.Count(s => s.Status == "occupied")</p>
<p>Nedostupných míst: @Model.ParkingSpaces.Count(s => s.Status == "under_maintenance")</p>
<!-- Přidejte SpaceNumber do ParkingSpaceViewModel, pokud je potřeba -->
<p>Čísla parkovacích míst: od 1 do @Model.Capacity</p>

<div class="row">
    @foreach (var space in Model.ParkingSpaces)
    {
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Místo @space.SpaceNumber</h5>
                    <p class="card-text">ID: @space.ParkingSpaceId</p>
                    <p class="card-text">Status: @space.Status</p>
                    @if (space.Status == "available")
                    {
                        <form asp-action="ChangeStatus" asp-controller="ParkingLot" method="post">
                            <input type="hidden" name="parkingSpaceId" value="@space.ParkingSpaceId" />
                            <input type="hidden" name="parkingLotId" value="@Model.ParkingLotId" />
                            <input type="hidden" name="status" value="under_maintenance" />
                            <button type="submit" class="btn btn-warning">Označit jako v údržbě</button>
                        </form>
                    }
                    else if (space.Status == "under_maintenance")
                    {
                        <form asp-action="ChangeStatus" asp-controller="ParkingLot" method="post">
                            <input type="hidden" name="parkingSpaceId" value="@space.ParkingSpaceId" />
                            <input type="hidden" name="parkingLotId" value="@Model.ParkingLotId" />
                            <input type="hidden" name="status" value="available" />
                            <button type="submit" class="btn btn-success">Označit jako dostupné</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    }
</div>