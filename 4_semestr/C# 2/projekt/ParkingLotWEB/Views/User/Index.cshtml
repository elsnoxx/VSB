@model IEnumerable<ParkingLotWEB.Models.User>
@{
    ViewData["Title"] = "Uživatelé";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Uživatelé</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Přidat uživatele
        </a>
    </div>
    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Uživatelské jméno</th>
                        <th scope="col">Role</th>
                        <th scope="col" class="text-center">Akce</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>
                            <span class="badge bg-primary">@user.Role</span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-1" title="Editovat">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger me-1" onclick="return confirm('Opravdu smazat?');" title="Smazat">
                                <i class="bi bi-trash"></i> Smazat
                            </a>
                            <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning" title="Reset hesla">
                                <i class="bi bi-arrow-repeat"></i> Reset hesla
                            </a>
                            <a asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary" title="Změnit roli">
                                <i class="bi bi-shield-lock"></i> Změnit roli
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>