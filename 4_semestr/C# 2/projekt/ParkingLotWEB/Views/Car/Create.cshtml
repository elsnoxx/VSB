@model ParkingLotWEB.Models.Car

@{
    ViewData["Title"] = "Přidat auto";
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Přidat auto</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="UserId" value="@userId" />
                        <div class="mb-3">
                            <label asp-for="LicensePlate" class="form-label"></label>
                            <input asp-for="LicensePlate" class="form-control" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BrandModel" class="form-label"></label>
                            <input asp-for="BrandModel" class="form-control" />
                            <span asp-validation-for="BrandModel" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Color" class="form-label"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Přidat</button>
                            <a asp-controller="User" asp-action="Profil" class="btn btn-secondary">Zpět</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}