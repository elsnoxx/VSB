@model ParkingLotWEB.Models.Car

@{
    ViewData["Title"] = "Přidat auto";
}

<div class="container mt-4">
    <h2>Přidat auto</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="LicensePlate" class="form-label"></label>
            <input asp-for="LicensePlate" class="form-control" />
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BrandModel" class="form-label"></label>
            <input asp-for="BrandModel" class="form-control" />
            <span asp-validation-for="BrandModel" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Color" class="form-label"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Přidat</button>
        <a asp-controller="User" asp-action="Profil" class="btn btn-secondary">Zpět</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}