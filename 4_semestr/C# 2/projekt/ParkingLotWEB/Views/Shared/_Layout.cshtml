<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ParkingLotWEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ParkingLotWEB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-sA+e2tu6pJg3lgsLhM8V+gQKjvCwCkT0p1g8H1F0C/g="
          crossorigin=""/>
</head>
<body>
    @using Microsoft.AspNetCore.Identity
    @using System.Security.Claims
    @{
        var isAuthenticated = User.Identity.IsAuthenticated;
        var isAdmin = User.IsInRole("Admin");
        var isUser = User.IsInRole("User");
        var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ParkingLotWEB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="User" asp-action="Profil" asp-route-id="@userId">@User.Identity.Name</a>
                            </li>
                            @if (isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ParkingLot" asp-action="Index">Lots</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="Index">Uživatelé</a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ParkingLot" asp-action="Statistics">Statistika</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ApiDescription" asp-action="Index">API</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">Odhlásit se</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Přihlášení</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Registration" asp-action="Register">Registrace</a>
                            </li>
                            
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ParkingLotWEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
