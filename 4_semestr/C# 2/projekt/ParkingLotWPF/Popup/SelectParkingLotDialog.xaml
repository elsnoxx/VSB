<Window x:Class="ParkingLotWPF.Popup.SelectParkingLotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vyberte parkoviště" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="ParkingLotCombo"
                  DisplayMemberPath="name"
                  SelectedValuePath="parkingLotId"
                  Width="300"
                  Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Zrušit" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>