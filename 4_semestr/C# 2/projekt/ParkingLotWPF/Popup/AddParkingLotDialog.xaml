<Window x:Class="ParkingLotWPF.Popup.AddParkingLotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nové parkoviště" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Latitude" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="LatitudeBox" Grid.Row="1" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Longitude" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="LongitudeBox" Grid.Row="2" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Počet parkovacích míst" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="CapacityBox" Grid.Row="3" Grid.Column="1" Margin="5,5,0,5"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
            <Button Content="Vytvořit" Width="100" Margin="0,0,10,0" Click="Create_Click"/>
            <Button Content="Zpět" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
