<Window x:Class="ParkingLotWPF.Popup.CarRegistrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrace auta" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="SPZ:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="LicensePlateBox" Grid.Row="0" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Model:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="BrandModelBox" Grid.Row="1" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Barva:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="ColorBox" Grid.Row="2" Grid.Column="1" Margin="5,5,0,5"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Registrovat" Width="100" Margin="0,0,10,0" Click="Register_Click"/>
            <Button Content="Zrušit" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
