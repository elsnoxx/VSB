<Window x:Class="ParkingLotWPF.Popup.ChangePricePerHourDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Změna ceny za hodinu" Height="180" Width="350" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Nová cena za hodinu (Kč):" />
        <TextBox x:Name="PriceBox" Grid.Row="1" Margin="0,10,0,0" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="70" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Zrušit" Width="70" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>