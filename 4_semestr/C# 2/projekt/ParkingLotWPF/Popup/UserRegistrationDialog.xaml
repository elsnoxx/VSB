<Window x:Class="ParkingLotWPF.Popup.UserRegistrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrace uživatele" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Jméno:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="FirstNameBox" Grid.Row="0" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Příjmení:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="LastNameBox" Grid.Row="1" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Uživatelské jméno:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="UsernameBox" Grid.Row="2" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Email:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="EmailBox" Grid.Row="3" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Heslo:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="4" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="Role:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="RoleComboBox" Grid.Row="5" Grid.Column="1" Margin="5,5,0,5" SelectedIndex="0">
            <ComboBoxItem Content="User"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Registrovat" Width="100" Margin="0,0,10,0" Click="Register_Click"/>
            <Button Content="Zrušit" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
